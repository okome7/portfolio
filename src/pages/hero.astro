---
// src/components/Hero.astro
---

<section
  class="relative bg-white min-h-screen flex flex-col md:flex-row items-center px-6 md:px-20 overflow-hidden"
>
  <!-- 左側：テキスト -->
  <div class="flex-1 flex flex-col justify-center text-left md:pr-10">
    <!-- メインタイトル -->
    <h1
      class="text-4xl md:text-6xl font-semibold text-gray-800 mb-4 leading-snug animate-fadeIn"
    >
      Creating apps with usability in mind.
    </h1>

    <!-- サブタイトル -->
    <p class="text-lg md:text-xl text-gray-600 mb-6 animate-fadeIn delay-200">
      Frontend Developer — okome
    </p>
  </div>

  <!-- 右側：パソコン画像 -->
  <div class="flex-1 flex justify-center md:justify-end mt-10 md:mt-0">
    <img
      src="/laptop.png"
      alt="Laptop"
      class="w-80 md:w-[400px] animate-fadeIn delay-200"
    />
  </div>

  <!-- 背景丸デコレーション -->
  <div
    class="absolute -top-16 -left-20 w-64 h-64 bg-gradient-to-br from-[#FDE8D0] to-[#F4A259] rounded-full opacity-30 pointer-events-none animate-float"
  >
  </div>
  <div
    class="absolute -bottom-24 -right-16 w-72 h-72 bg-[#F4A259] rounded-full opacity-20 pointer-events-none animate-float animation-delay-200"
  >
  </div>
</section>

<style>
  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(10px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes float {
    0%,
    100% {
      transform: translateY(0);
    }
    50% {
      transform: translateY(-10px);
    }
  }

  .animate-fadeIn {
    animation: fadeIn 1s ease forwards;
  }
  .animate-fadeIn.delay-200 {
    animation-delay: 0.2s;
  }
  .animate-fadeIn.delay-400 {
    animation-delay: 0.4s;
  }

  .animate-float {
    animation: float 6s ease-in-out infinite;
  }
  .animation-delay-200 {
    animation-delay: 0.2s;
  }
</style>
