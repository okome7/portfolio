---
import BaseLayout from "../../layouts/BaseLayout.astro";
import AppIntro from "../../components/projects_common/AppIntro.astro";
import SectionTitle from "../../components/projects_common/SectionTitle.astro";
import FeatureCardsGrid from "../../components/projects_common/FeatureCardsGrid.astro";
import HighlightsGrid from "../../components/projects_common/HighlightsGrid.astro";

const delishFeatures = [
  {
    image: "/portfolio/screenshots/delishdays-home.png",
    title: "ホーム画面",
    points: [
      "Cook / Eat タブ切替",
      "カテゴリボタン（6種類）",
      "投稿一覧（写真・タイトル・日付）",
      "キーワード検索",
    ],
  },
  {
    image: "/portfolio/screenshots/delishdays-calendar.png",
    title: "カレンダー画面",
    points: [
      "1ヶ月の食事記録を日別に可視化",
      "日付クリックでその日の投稿一覧表示",
    ],
  },
  {
    image: "/portfolio/screenshots/delishdays-add.png",
    title: "投稿追加画面",
    points: [
      "今日の日付が自動入力",
      "タイトル / メニュー名入力",
      "カテゴリ選択（6つ）",
      "写真追加（1枚以上）",
      "コメント・メモ",
      "Cook / Eat に登録して保存",
    ],
  },
  {
    image: "/portfolio/screenshots/delishdays-favorites.png",
    title: "お気に入り画面",
    points: ["お気に入り投稿一覧の表示"],
  },
  {
    image: "/portfolio/screenshots/delishdays-settings.png",
    title: "設定画面",
    points: [
      "ユーザー設定",
      "通知 ON/OFF",
      "テーマカラー変更",
      "アプリ情報 / アカウント削除",
    ],
  },
];

const highlights = [
  {
    title: "IndexedDB を用いてデータをブラウザ内に保存",
  },
  {
    title: "Vue3 + Piniaで状態管理を実装し、設定や投稿データの同期を効率化",
  },
  {
    title: "Vue Router を使用したルート設定により、画面遷移をスムーズに実装",
  },
];
---

<BaseLayout title="DelishDays">
  <main class="px-4 md:px-8 py-16 max-w-5xl mx-auto">
    <AppIntro
      title="DelishDays"
      description={`作った料理と外食を分けて記録できるライフログアプリ。Cook / Eat の切り替えやカテゴリ分類、写真・コメント・日付を記録できます。`}
    />

    <SectionTitle label="画面構成・機能紹介" />
    <FeatureCardsGrid features={delishFeatures} />

    <SectionTitle label="工夫した点" />
    <HighlightsGrid highlights={highlights} />
  </main>
</BaseLayout>
