---
interface ProjectCardProps {
  title: string;
  tech: string;
  description: string;
  image: string;
  link: string; // 詳細ページ
  appLink: string; // 実際にアプリを開くリンク）
}

const { title, tech, description, image, link, appLink } =
  Astro.props as ProjectCardProps;
---

<div
  class="w-full bg-white dark:bg-gray-800 p-6 rounded-lg shadow-md hover:shadow-xl transition-shadow"
  data-aos="fade-up"
  data-aos-duration="800"
>
  <div
    class="flex flex-col md:flex-row gap-6 items-center md:items-start w-full"
  >
    <!-- 左：アプリ画像 -->
    <div class="w-full md:w-1/2">
      <img
        src={image}
        alt={title}
        class="rounded-lg w-full h-auto object-cover shadow"
      />
    </div>

    <!-- 右：テキスト -->
    <div class="w-full md:w-1/2 flex flex-col justify-between">
      <div>
        <h3 class="text-xl font-bold mb-2">{title}</h3>
        <p class="text-gray-700 dark:text-gray-300 mb-2">{tech}</p>
        <p class="text-gray-700 dark:text-gray-300 mb-2">{description}</p>
      </div>

      <!-- ボタン -->
      <div class="mt-4 flex gap-3">
        <a
          href={link}
          class="inline-block bg-[#F4A259] text-white font-semibold py-2 px-5 rounded-lg hover:bg-[#FFD2A8] transition-colors text-center"
        >
          詳しく見る
        </a>

        {
          appLink && (
            <a
              href={appLink}
              target="_blank"
              rel="noopener noreferrer"
              class="inline-block bg-[#6C63FF] text-white font-semibold py-2 px-5 rounded-lg hover:bg-[#9B94FF] transition-colors text-center"
            >
              アプリを開く
            </a>
          )
        }
      </div>
    </div>
  </div>
</div>
