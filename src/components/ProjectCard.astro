---
interface ProjectCardProps {
  title: string;
  tech: string;
  description: string;
  image: string;
  link: string;
}

const { title, tech, description, image, link } =
  Astro.props as ProjectCardProps;
---

<div
  class="w-full bg-white dark:bg-gray-800 p-6 rounded-lg shadow-md hover:shadow-xl transition-shadow"
>
  <div
    class="flex flex-col md:flex-row gap-6 items-center md:items-start w-full"
  >
    <!-- 左：アプリ画像 -->
    <div class="w-full md:w-1/2">
      <img
        src={image}
        alt={title}
        class="rounded-lg w-full h-auto object-cover shadow"
      />
    </div>

    <!-- 右：テキスト -->
    <div class="w-full md:w-1/2 flex flex-col justify-between">
      <div>
        <h3 class="text-xl font-bold mb-2">{title}</h3>

        <p class="text-gray-700 dark:text-gray-300 mb-2">{tech}</p>

        <p class="text-gray-700 dark:text-gray-300 mb-2">{description}</p>
      </div>

      <!-- 詳細ページへのボタン -->
      <a
        href={link}
        class="mt-4 inline-block bg-[#F4A259] text-white font-semibold py-2 px-4 rounded hover:bg-[#f3a540] transition-colors text-center"
      >
        詳しく見る
      </a>
    </div>
  </div>
</div>
